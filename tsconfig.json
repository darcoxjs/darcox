{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": false,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "."
  },
  "include": ["packages/**/*", "scripts/**/*", "./*.ts", "./*.js"],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/*.spec.ts"
  ]
}
